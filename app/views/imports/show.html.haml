.container
  .row
    .col-xs-12.col-sm-10.col-sm-offset-1
      %h1.light-title.text-center Resultados de la carga
  .row.mb-md.mt-lg
    .col-xs-6.import-result-metadata.col-xs-offset-2
      = link_to valid_import_results_import_path, class: 'fullsize-link black-link' do
        %h2.md-margin Filas procesados exitosamente
    .col-xs-3.valid-import-result
      = link_to valid_import_results_import_path(@import), class: 'fullsize-link' do
        %h2.md-margin= @import.valid_rows
  .row.mb-md
    .col-xs-6.import-result-metadata.col-xs-offset-2
      = link_to invalid_import_results_import_path(@import), class: 'fullsize-link black-link' do
        %h2.md-margin Filas con errores
    .col-xs-3.invalid-import-result
      = link_to invalid_import_results_import_path(@import), class: 'fullsize-link' do
        %h2.md-margin= @import.invalid_rows
  .row.mb-md
    .col-xs-4.import-result-metadata.col-xs-offset-4
      %h2.md-margin Total de filas
    .col-xs-3.import-result
      %h2.md-margin= @import.total_rows
