#plans.section
  .container
    %h1.center-text.margin_none Nuestros planes

    .row.visible-xs-block
      #carousel-plans-landing.carousel.slide{"data-ride" => "carousel", "data-interval" => "false"}
        / Indicators
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-plans-landing"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-plans-landing"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-plans-landing"}
          %li{"data-slide-to" => "3", "data-target" => "#carousel-plans-landing"}
        / Wrapper for slides
        / TODO: add conditions to plan model and do a foreach of them
        .carousel-inner{:role => "listbox"}
          .item.active
            = render 'plan', id: 1, conditions: ["200 exam. históricos", "1 usuario"], name: "FREE", image_file: "free.svg"

          .item
            = render 'plan', id: 2, conditions: ["1000 exam. históricos", "1 usuario"], name: "5 UF/mes", image_file: "200.svg"

          .item
            = render 'plan', id: 3, conditions: ["Sin tope exam. históricos", "1000 exam. mensuales", "20 usuarios"], name: "55 UF/mes", image_file: "2200.svg"

          .item
            = render 'plan', id: 4, conditions: ["Sin tope exam. históricos", "5000 exam. mensuales", "Usuarios ilimitados"], name: "100 UF/mes", image_file: "4000.svg"

        / Controls
        %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-plans-landing", :role => "button"}
          %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-plans-landing", :role => "button"}
          %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
          %span.sr-only Next

    .row.plans.hidden-xs
      / TODO: add conditions to plan model and do a foreach of them
      .col-xs-12.col-sm-6.col-md-6.col-lg-3
        = render 'plan', id: 1, conditions: ["200 exam. históricos", "1 usuario"], name: "FREE", image_file: "free.svg"

      .col-xs-12.col-sm-6.col-md-6.col-lg-3
        = render 'plan', id: 2, conditions: ["1000 exam. históricos", "1 usuario"], name: "5 UF/mes", image_file: "200.svg"

      .col-xs-12.col-sm-6.col-md-6.col-lg-3
        = render 'plan', id: 3, conditions: ["Sin tope exam. históricos", "1000 exam. mensuales", "20 usuarios"], name: "55 UF/mes", image_file: "2200.svg"

      .col-xs-12.col-sm-6.col-md-6.col-lg-3
        = render 'plan', id: 4, conditions: ["Sin tope exam. históricos", "5000 exam. mensuales", "Usuarios ilimitados"], name: "100 UF/mes", image_file: "4000.svg"
